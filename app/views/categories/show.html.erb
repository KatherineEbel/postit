<nav class="w-50" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to 'All Posts', posts_path %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= @category.name %>
    </li>
  </ol>
</nav>
<% if @posts.size > 0 %>
  <%= render 'shared/content_title',
             title: "Viewing posts for category #{@category.name}" %>
  <%= render @posts %>
<% else %>
  <%= render 'shared/content_title',
             title: 'No posts for this category yet...'
  %>
<% end %>
