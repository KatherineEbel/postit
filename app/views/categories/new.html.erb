<%= render 'shared/content_title', title: 'Add a category' %>
<%= render 'shared/errors', obj: @category %>
<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit 'Add Category', class: 'btn btn-primary btn-sm' %>
<% end %>