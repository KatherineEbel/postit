<%= render 'shared/errors', obj: @user %>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <% button_text = @user.new_record? ? 'Register' : 'Update' %>
  <%= f.submit button_text, class: 'btn btn-primary' %>
<% end %>
