<%= render 'shared/content_title',
           title: "Profile: #{current_user&.username}" %>
<div class="card">
  <div class="card-body">
    <span class="card-text text-dark">
      Username:
    </span>
    <span class="text-black-50"><%= current_user&.username %></span>
    <span class="card-text text-dark">
               Time zone:
               </span>
    <span class="text-black-50">TODO</span>
  </div>
</div>
<h6 class="mt-5"><%= current_user&.username %>'s Activity</h6>
<ul class="nav nav-tabs mt-5" id="activityTabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="posts-tab"
       data-toggle="tab" href="#posts"
       role="tab" aria-controls="posts" aria-selected="true">
      Posts (<%= current_user&.posts&.size %>)
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="comments-tab"
       data-toggle="tab" href="#comments"
       role="tab" aria-controls="comments" aria-selected="false">
      Comments (<%= current_user&.comments&.size %>)
    </a>
  </li>
</ul>
<div class="tab-content" id="userActivity">
  <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
    <%= render current_user&.posts %>
  </div>
  <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">
    <%= render current_user&.comments, linked: true %>
  </div>
</div>
